<odoo>
    <record id="ir_cron_update_state" model="ir.cron">
        <field name="name">Update warranty status</field>
        <field name="model_id" ref="model_warranty_record"/>
        <field name="state">code</field>
        <field name="code">model.update_state_cron()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="nextcall" eval="datetime.now().replace(hour=18, minute=0, second=0, microsecond=0)"/>
    </record>
</odoo>