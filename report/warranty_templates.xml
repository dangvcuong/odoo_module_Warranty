<odoo>
    <template id="report_warranty_report">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="doc">
                <main class="page" style="font-family: Arial, sans-serif; font-size: 12px; padding: 20px;">
                    <h1 style="text-align:center; text-transform: uppercase; margin-bottom: 20px; color: #2E86C1;">
                        Warranty Card
                    </h1>

                    <table style="width:100%; border-collapse: collapse; margin-bottom: 20px;">
                        <tr>
                            <td style="padding: 8px; font-weight: bold;">Coupon code:</td>
                            <td style="padding: 8px;"><t t-esc="doc.name"/></td>
                        </tr>
                        <tr style="background-color: #f2f2f2;">
                            <td style="padding: 8px; font-weight: bold;">Customer:</td>
                            <td style="padding: 8px;"><t t-esc="doc.partner_id.name"/></td>
                        </tr>
                        <tr>
                            <td style="padding: 8px; font-weight: bold;">Product:</td>
                            <td style="padding: 8px;"><t t-esc="doc.product_id.name"/></td>
                        </tr>
                        <tr style="background-color: #f2f2f2;">
                            <td style="padding: 8px; font-weight: bold;">Start:</td>
                            <td style="padding: 8px;"><t t-esc="doc.start_date"/></td>
                        </tr>
                        <tr>
                            <td style="padding: 8px; font-weight: bold;">End:</td>
                            <td style="padding: 8px;"><t t-esc="doc.end_date"/></td>
                        </tr>
                    </table>

                    <p style="text-align:center; margin-top: 40px; font-size: 10px; color: #888;">
                        Thank you for using our service. Warranty card is valid according to company policy.
                    </p>
                </main>
            </t>
        </t>
    </template>
</odoo>
