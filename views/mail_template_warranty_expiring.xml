<odoo>
    <template id="warranty_expiry_warning_template">
        <t t-name="warranty_management.warranty_expiry_warning_template">
            <div>
                <h3 style="margin: 10px 0; font-size: 16px; color: #333; color:black">
                    [Cảnh báo] Thông tin bảo hành sản phẩm
                </h3>

                <!-- Danh sách sản phẩm sắp hết hạn -->
                <t t-if="expiring_records">
                    <p style="color: orange; font-weight: bold; margin: 5px 0; font-size: 14px">
                        Sản phẩm sắp hết hạn bảo hành:
                    </p>
                    <ul style="margin: 0 0 10px 20px; padding: 0;">
                        <t t-foreach="expiring_records" t-as="rec">
                            <li style="margin-bottom: 4px; font-size: 14px; line-height: 1.4; color:black">
                                <b><t t-esc="rec['product_name']"/></b>
                                (Khách hàng: <t t-esc="rec['partner_name']"/> –
                                Ngày hết hạn: <t t-esc="rec['end_date']"/>)
                            </li>
                        </t>
                    </ul>
                </t>

                <!-- Danh sách sản phẩm đã hết hạn -->
                <t t-if="expired_records">
                    <p style="color: red; font-weight: bold; margin: 5px 0; font-size: 14px">
                        Sản phẩm đã hết hạn bảo hành:
                    </p>
                    <ul style="margin: 0 0 15px 20px; padding: 0;">
                        <t t-foreach="expired_records" t-as="rec">
                            <li style="margin-bottom: 4px; font-size: 14px; line-height: 1.4; color:black">
                                <b><t t-esc="rec['product_name']"/></b>
                                (Khách hàng: <t t-esc="rec['partner_name']"/> –
                                Ngày hết hạn: <t t-esc="rec['end_date']"/>)
                            </li>
                        </t>
                    </ul>
                </t>
            </div>
        </t>
    </template>
</odoo>
