<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_warranty_record_list" model="ir.ui.view">
            <field name="name">warranty.record.list</field>
            <field name="model">warranty.record</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_warranty_record_form" model="ir.ui.view">
            <field name="name">warranty.record.form</field>
            <field name="model">warranty.record</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                            <field name="picking_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_warranty_search" model="ir.ui.view">
            <field name="model">warranty.record</field>
            <field name="arch" type="xml">
                <search string="State">
                    <filter name="Active" domain="[('state', '=', 'active')]"/>
                    <filter name="Expiring Soon" domain="[('state', '=', 'expiring')]"/>
                    <filter name="Expired" domain="[('state', '=', 'expired')]"/>
                </search>
            </field>
        </record>

        <record id="action_warranty_record" model="ir.actions.act_window">
            <field name="name">Warranty Card</field>
            <field name="res_model">warranty.record</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_warranty_root"
                  name="Warranty"
                  sequence="10"/>

        <menuitem id="menu_warranty_record"
                  name="Warranty Card"
                  parent="menu_warranty_root"
                  action="action_warranty_record"
                  sequence="1"/>
    </data>
</odoo>
